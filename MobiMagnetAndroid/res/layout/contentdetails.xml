<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#eaf9f9">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#eaf9f9">
		<ImageButton android:id="@+id/imagebutton" android:src="@drawable/mainimg"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#eaf9f9">
		
	<TextView android:id="@+id/contentDetailedTitle" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="left" 
		android:paddingTop="20dip"
		android:paddingBottom="20dip" 
		android:textColor="#000000"/>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#eaf9f9">

	<ImageView android:id="@+id/contentDetailedImg"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" 
		android:paddingLeft="2px"/>

	<TextView android:id="@+id/contentDetailedAddress" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="left" 
		android:paddingTop="20dip"
		android:paddingBottom="20dip" 
		android:textColor="#000000"/>
		
		<ImageButton android:id="@+id/shareFbButton" 
		android:src="@drawable/fb"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		
		/>
	
		</LinearLayout>
		
	</LinearLayout>
</LinearLayout>
