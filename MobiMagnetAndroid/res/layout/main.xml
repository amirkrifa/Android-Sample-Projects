<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#eaf9f9">

	<TextView android:id="@+id/button_info_text" android:text="@string/sync_textview_text"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" android:paddingTop="20dip"
		android:paddingBottom="20dip"
		android:textColor="#000000" />

	<Button android:id="@+id/button" android:text="@string/sync_button_text"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" />

	<Button android:id="@+id/fbconnect" android:text="@string/connect_fb"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" />


	<ProgressBar android:id="@+id/mainProgress" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"  />
		


</LinearLayout>